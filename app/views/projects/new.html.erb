
  <h1 class="text-center mb-3  mt-3">New Project</h1>
<div class="container card  pt-3">
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p class="alert alert-danger" role="alert"> <%= error %></p>
    <%end%>
<%end%>
<div class="card-body">
 <%= form_for(:project, url: '/projects') do |f| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :title, "Title", class: "col-md-4 control-label" %>
        <div class="col-md-12">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :img, "Img Url", class: "col-md-4 control-label" %>
        <div class="col-md-12">
          <%= f.text_field :img, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :description, "Description", class: "col-md-4 control-label mt-3" %>
        <div class="col-md-12">
          <%= f.text_area :description, placeholder: "Project description..", class: "form-control" %>
        </div>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :content, "Content", class: "col-md-4 control-label mt-3" %>
        <div class="col-md-12">
          <%= f.text_area :content, placeholder: "Full content..", class: "form-control" %>
        </div>
      </div>
      
    </div>
      
     <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
     
     </div>

 <% end %> 




</div>
</div>

