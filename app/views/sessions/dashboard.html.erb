<div class="row">
    <div class="col-md-4">
        <div class="card mb-4 box-shadow">
             <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22510%22%20height%3D%22225%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20510%20225%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_16f908e32a2%20text%20%7B%20fill%3A%23eceeef%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A26pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_16f908e32a2%22%3E%3Crect%20width%3D%22510%22%20height%3D%22225%22%20fill%3D%22%2355595c%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%22167.375%22%20y%3D%22124.10625%22%3EThumbnail%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true"><div class="card-body">
                <h3 class="card-text"><%= @user.name %></h3>
                <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group row">
                    <button type="button" class="btn btn-sm btn-outline-danger mr-3">Delete Account</button>
                    <%= link_to "New Project", '/projects/new', class: "btn btn-outline-secondary" %>
                    </div>
                    
                  </div>
                </div>
            </div>
        </div>
       <div class="col-md-8">
       <h3>Users</h3>
       <% if flash[:errors] %>    
        <p class="alert alert-danger" role="alert"> <%= flash[:errors] %></p>   
<%end%>
       <table class="table">
       
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
      <th scope="col">Add / Remove Admin</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each_with_index do |user, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
       <% if user.admin %>
            <td> <%= user.name %><span class="badge badge-pill badge-danger ml-1">Admin</span></td>   
          <% else %>
              <td><%= user.name %></td>
          <% end %>
       
      <td><%= user.email %></td>
      <td><%= link_to 'Edit', users_edit_path(user), class: "btn btn-sm btn-outline-primary" %></td>      
      <td><%= link_to 'Destroy',   users_destroy_path(user), class: "btn btn-sm btn-outline-danger", data: { confirm: 'Are you sure?' } %></td>
     
      <td><%= link_to 'Toggle Admin', users_admin_path(user), class: "btn btn-sm btn-outline-info" %></td>
    

    </tr>
    <% end %>
    
  </tbody>
</table>
  <br>
 <h3>Projects</h3>
  <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Created at</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @projects.each_with_index do |p, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= p.title %></td>
      <td><%= p.created_at.strftime("%m/%d/%Y") %></td>
      <td><%= link_to 'Edit', edit_project_path(p), class: "btn btn-sm btn-outline-primary" %></td>
     
      <td> <%= link_to "delete", p, method: :delete, class: "btn btn-sm btn-outline-danger" %>  </td>
    </tr>
    <% end %>
    
  </tbody>
</table>
</div>
</div>