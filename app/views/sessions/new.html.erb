<h1 class="text-center mb-3  mt-5">Login</h1>
<div class="card container pt-5 mt-4">
<% if flash[:errors] %>    
        <p class="alert alert-danger" role="alert"> <%= flash[:errors] %></p>   
<%end%>
  <div class="col-md-12 col-md-offset-3">
    <%= form_for(:user, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control ' %>

      <%= f.label :password, class: 'pt-5' %>
      <%= f.password_field :password, class: 'form-control mb-3' %>

      <%= f.submit "Log in", class: "btn btn-primary px-3 " %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", '/signup' %></p>
  </div>