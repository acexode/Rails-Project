
  <h1 class="text-center mb-3  mt-3">SignUp</h1>
<div class="container card  pt-3">
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p class="alert alert-danger" role="alert"> <%= error %></p>
    <%end%>
<%end%>
<div class="card-body">
 <%= form_for User.new do |f| %>
      <div class="form-group">
        <%= f.label :name, "Username", class: "col-md-4 control-label" %>
        <div class="col-md-12">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, "Email", class: "col-md-4 control-label" %>
        <div class="col-md-12">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password", class: "col-md-4 control-label" %>
        <div class="col-md-12">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>     
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "col-md-4 control-label" %>
        <div class="col-md-12">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>     
     <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
     
     </div>

 <% end %> 




</div>
</div>